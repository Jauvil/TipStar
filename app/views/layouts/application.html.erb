<!DOCTYPE html>
<html>
<head>
  <title>TipStar</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
      <% if user_signed_in? %>
      <%= link_to "Customer Index", root_path, class: "navbar-brand" %>
      <% else %>
      <%= link_to "TipStar", root_path, class: "navbar-brand" %>
      <% end %>
      </div>
      
    <ul class="nav navbar-nav">
      <% if user_signed_in? == false %>
      <li><%= link_to "Sign Up", new_user_registration_path %></li>
      <% end %>
        
      <% if user_signed_in? %>
      <li><%= link_to "Create Customer", new_customer_path, 'data-popup' => true %></li>
      <li><%= link_to "Find Customer", search_path %></li>
      <% end %>
      </ul>
      <% if user_signed_in? %>
      <p><%= link_to "Sign Out of #{current_user.email}", destroy_user_session_path, method: :delete,
        class: "navbar-right navbar-text navbar-link" %></p>
        <% else %>
        <p><%= link_to "Sign In", new_user_session_path,
        class: "navbar-right navbar-text navbar-link" %></p>
        <% end %>
    </div>
  </nav>
  <div class="customer_list">
  </div>
  <div class="container">
       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
       <%= yield %>
  </div>
</body>
</html>


